      </if>
      <if test="isValid!=null">
        and t_user.is_valid = #{isValid,jdbcType=TINYINT}
      </if>
      <if test="userole!=null and userole!='' ">
        and locate(#{userole,jdbcType=VARCHAR},t.rid)!=0
