  <select id="getAllUser" parameterType="jz.cdgy.mbg.pojo.User" resultMap="UserResultMap">
    SELECT t_user.id,
    t_user.username,
    t_user.create_time,
    t_user.is_valid,
    t_user.is_bind,
    t_user.emp_id,
    t_user.image,
